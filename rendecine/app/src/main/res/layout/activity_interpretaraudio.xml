<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/audioLayout"
    tools:context=".view.InterpretaraudioActivity">

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:id="@+id/interpretarAudio"
        android:layout_weight="0.28"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:text="@string/grabar"
        android:id="@+id/botonGrabaraudio"
        android:onClick="grabarAudio"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="reproducir"
        android:visibility="invisible"
        android:id="@+id/reproducirAudio"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/siguiente"
        android:visibility="invisible"
        android:id="@+id/button_siguienteInterpretarA"
        android:onClick="siguienteInterpretarA"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:visibility="invisible"
        android:orientation="vertical"
        android:id="@+id/audio">
    </LinearLayout>



</LinearLayout>